    set_parser = mode_parser.add_parser("set")
    args = parser.parse_args()

    if args.mode == "list":
        pass
    elif args.mode == "set":
        pass


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("Thanks for using fe3h-checklist!")
